{
  "name": "root",
  "description": "The framework for various tests / checks in the current environment",
  "license": "ISC",
  "author": "Zdenek Nemec <z@goodapi.co> (http://goodapi.co)",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "yarn build:watch",
    "postinstall": "lerna link",
    "build": "yarn build:tsc",
    "build:clean": "rm -rf packages/*/lib",
    "build:tsc": "npx tsc --build packages",
    "build:watch": "yarn build:tsc --watch --preserveWatchOutput",
    "clean": "rm -rf .cache node_modules packages/*/{node_modules,lib}",
    "local:install": "lerna exec yarn link",
    "local:uninstall": "lerna exec yarn unlink",
    "preversion": "yarn test",
    "test": "yarn test:lint && yarn test:unit",
    "test:lint": "tslint --format stylish --project ./packages",
    "test:unit": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "husky": {
    "hooks": {
      "pre-commit": "./scripts/prettify-staged.sh",
      "post-commit": "git update-index -g"
    }
  },
  "devDependencies": {
    "@types/jest": "25.1.3",
    "@types/node": "10.17.16",
    "husky": "1.3.1",
    "jest": "25.1.0",
    "jest-yaml-transform": "0.2.0",
    "js-yaml": "3.13.1",
    "lerna": "^3.10.6",
    "prettier": "1.19.1",
    "ts-jest": "25.2.1",
    "tslint": "6.0.0",
    "tslint-config-prettier": "1.18.0",
    "typescript": "3.8.2"
  }
}
